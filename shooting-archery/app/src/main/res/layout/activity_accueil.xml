<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/nouveau"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_4"
            android:layout_marginTop="@dimen/size_4"
            android:background="@color/color_button"
            android:onClick="buttonOnClick1"
            android:text="@string/nouveau"
            android:textColor="@color/color_button_text"
            android:textColorHint="@color/color_button_text"
            android:textSize="@dimen/size_32"
            android:drawableLeft="@drawable/sheet3"


            android:elegantTextHeight="false"
            android:paddingLeft="@dimen/size_32"
            android:textStyle="bold"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_4"
            android:background="@color/color_button"
            android:text="@string/score"
            android:textColor="@color/color_button_text"
            android:textColorHint="@color/color_button_text"
            android:textSize="@dimen/size_32"

            android:drawableLeft="@drawable/view28"
            android:paddingLeft="30dp"
            android:drawablePadding="-30dp"
            android:textStyle="bold"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/monarc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:layout_marginBottom="@dimen/size_4"
            android:background="@color/color_button"
            android:onClick="buttonOnClick"
            android:text="@string/mes_arcs_accueil"
            android:textColor="@color/color_button_text"
            android:textColorHint="@color/color_button_text"
            android:textSize="@dimen/size_32"
            android:drawableLeft="@drawable/bow12"
            android:paddingLeft="30dp"
            android:drawablePadding="-30dp"
            android:textStyle="bold"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/conseil"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:layout_marginBottom="@dimen/size_4"
            android:background="@color/color_button"
            android:text="@string/conseil"
            android:textColor="@color/color_button_text"
            android:textColorHint="@color/color_button_text"
            android:textSize="@dimen/size_32"
            android:drawableLeft="@drawable/message31"
            android:paddingLeft="30dp"
            android:drawablePadding="-30dp"
            android:textStyle="bold"
            android:layout_weight=".25" />
    </LinearLayout>

</LinearLayout>