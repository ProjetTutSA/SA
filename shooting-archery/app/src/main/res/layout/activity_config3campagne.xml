<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <RadioButton
                android:id="@+id/config3Campagne_radiopiquet1"
                android:button="@drawable/radiobutton_selectorp0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="false"
                android:layout_marginLeft="@dimen/size20"
                />

            <RadioButton
                android:id="@+id/config3Campagne_radiopiquet2"
                android:button="@drawable/radiobutton_selectorp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                 />

            <RadioButton
                android:id="@+id/config3Campagne_radiopiquet3"
                android:button="@drawable/radiobutton_selectorp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/config3Campagnelayout_libel_nbr_cible"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/config3Campagne_libnbr_cible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/nbr_cible"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:paddingLeft="1dp" >

                <RadioButton
                    android:id="@+id/config3Campagne_radio12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="false"
                    android:text="@string/cible12" />

                <RadioButton
                    android:id="@+id/config3Campagne_radio24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/cible24" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/config3Campagnelayout_num_cible"
        android:visibility="visible">

        <TextView
            android:id="@+id/config3Campagne_libnum1erecible"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/num_cible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/config3Campagne_editnum1erecible"
            android:inputType="number"

            android:layout_weight="1" />

    </LinearLayout>



</LinearLayout>